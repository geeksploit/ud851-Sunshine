<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_weather_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_item_text_padding"
        android:textSize="@dimen/list_item_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_view_height"
        android:layout_marginLeft="@dimen/list_item_view_margin"
        android:layout_marginRight="@dimen/list_item_view_margin"
        android:background="@color/list_item_view_color" />
</LinearLayout>